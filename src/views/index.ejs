<% include partials/header %>


    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="titulo" placeholder="Introduzca un título de tarea" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="descripcion" cols="80" placeholder="Introduzca la descripción de la tarea." class="form-control"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block"> 
                                Añadir 
                            </button>

                        </form>
                    </div>
                </div>

            </div>
            <div class="col-md-8">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nº</th>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Administración</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < tareas.length; i++){ %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= tareas[i].titulo %></td>
                                <td><%= tareas[i].descripcion %></td>
                                <td>
                                    <a href="/done/<%= tareas[i]._id %>" 
                                        class="btn <%= tareas[i].estado ? 'btn-success' : 'btn-dark' %>  btn-sm">Hecho</a>
                                    <a href="/delete/<%= tareas[i]._id %>" class="btn btn-danger btn-sm">Borrar</a>
                                    <a href="/update/<%= tareas[i]._id%>" class="btn btn-info btn-sm">Edit</a>
                                </td>
                                
                            </tr>    
                        <%}%>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<% include partials/footer %>
